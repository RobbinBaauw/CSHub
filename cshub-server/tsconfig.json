{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": ["es7"],
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
